<!DOCTYPE html>
<html lang="en">
<head>
    <title>Chat</title>
    <link rel="stylesheet" href="/public/bulma.min.css">
    <style>
        /* Main layout styling */
        .chat-container {
            display: flex;
            flex-direction: column;
            height: 90vh; /* Adjusted height */
        }

        .top-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background-color: #f5f5f5;
            border-bottom: 2px solid #ddd;
        }

        .main-content {
            display: flex;
            flex-grow: 1;
        }

        /* Room list sidebar */
        .sidebar {
            width: 25%;
            border-right: 2px solid #ddd;
            padding: 15px;
            overflow-y: auto;
            height: 85vh; /* Shorter height */
        }

        .sidebar ul {
            list-style-type: none;
            padding: 0;
        }

        .sidebar ul li {
            padding: 8px;
            margin: 5px 0;
            background-color: #f0f0f0;
            border-radius: 5px;
        }

        .sidebar ul li a {
            text-decoration: none;
            color: #333;
            font-weight: bold;
            display: flex;
            justify-content: space-between;
        }

        .sidebar ul li a:hover {
            background-color: #e0e0e0;
            padding: 5px;
            border-radius: 5px;
        }

        .unread-badge {
            background-color: red;
            color: white;
            font-size: 12px;
            padding: 2px 6px;
            border-radius: 12px;
            font-weight: bold;
        }

        /* Chat box */
        .chat-box-container {
            flex-grow: 1;
            padding: 15px;
            display: flex;
            flex-direction: column;
            height: 85vh;
        }

        #chat-box {
            flex-grow: 1;
            overflow-y: auto;
            border: 1px solid #ddd;
            padding: 10px;
            background-color: #f8f9fa;
            height: 65vh;
            display: flex;
            flex-direction: column;
        }

        /* Chat messages */
        .message {
            padding: 8px;
            margin: 5px 0;
            border-radius: 10px;
            max-width: 60%;
            word-wrap: break-word;
        }

        .message.sent { /* User's own messages (Right side, Green) */
            background-color: #28a745;
            color: white;
            align-self: flex-end;
            text-align: right;
        }

        .message.received { /* Other users' messages (Left side, Blue) */
            background-color: #007bff;
            color: white;
            align-self: flex-start;
            text-align: left;
        }

        .message strong {
            display: block;
            font-size: 12px;
            color: white;
        }

        .timestamp {
            font-size: 10px;
            color: rgba(255, 255, 255, 0.8);
        }

        /* Chat input */
        #chat-form {
            display: flex;
            align-items: center;
            padding-top: 5px;
            background-color: #fff;
            padding: 10px;
            border-top: 2px solid #ddd;
        }

        #chat-form input {
            flex-grow: 1;
            padding: 8px;
            border: 1px solid #ddd;
            border-radius: 5px;
            margin-right: 10px;
        }

        .button {
            padding: 8px 15px;
        }

        /* Invite User Form */
        .invite-user {
            padding: 10px 0;
        }
    </style>
</head>
<body>

<div class="chat-container">
    <!-- Top Bar -->
    <div class="top-bar">
        <h2>Welcome, <%= username %></h2>
        <form action="/createRoom" method="POST">
            <input type="text" name="roomName" placeholder="Enter room name" required>
            <button type="submit" class="button is-success">Create Room</button>
        </form>
        <a href="/logout" class="button is-danger">Logout</a>
    </div>

    <div class="main-content">
        <!-- Room List (Sidebar) -->
        <div class="sidebar">
            <h3 class="subtitle">Your Rooms</h3>
            <ul>
                <% if (typeof rooms !== "undefined" && rooms.length > 0) { %>
                    <% rooms.forEach(room => { %>
                        <li>
                            <a href="/room/<%= room.room_id %>">
                                <%= room.name %>
                                <% if (room.unreadMessages && room.unreadMessages > 0) { %>
                                    <span class="unread-badge"><%= room.unreadMessages %></span>
                                <% } %>
                            </a>
                        </li>
                    <% }) %>
                <% } else { %>
                    <p>You are not part of any rooms yet.</p>
                <% } %>
            </ul>
        </div>

        <!-- Chat Box -->
        <div class="chat-box-container">
            <div id="chat-box" class="box">
                <% if (messages && messages.length > 0) { %>
                    <% messages.forEach(message => { %>
                        <% if (message.RoomUser.User.username === username) { %>
                            <div class="message sent">
                                <strong>You</strong>
                                <%= message.text %>
                                <span class="timestamp">(<%= message.sent_datetime %>)</span>
                            </div>
                        <% } else { %>
                            <div class="message received">
                                <strong><%= message.RoomUser.User.username %></strong>
                                <%= message.text %>
                                <span class="timestamp">(<%= message.sent_datetime %>)</span>
                            </div>
                        <% } %>
                    <% }) %>
                <% } else { %>
                    <p>No messages yet. Start the conversation!</p>
                <% } %>
            </div>

            <!-- Invite User Form -->
            <% if (typeof room_id !== "undefined" && room_id) { %>
                <div class="invite-user">
                    <form action="/inviteUser" method="POST">
                        <input type="hidden" name="roomId" value="<%= room_id %>">
                        <input type="text" name="username" placeholder="Enter username to invite" required>
                        <button type="submit" class="button is-info">Invite</button>
                    </form>
                </div>
            <% } %>

            <!-- Chat Input Form -->
            <% if (typeof room_id !== "undefined" && room_id) { %>
                <form id="chat-form" action="/sendMessage" method="POST">
                    <input type="hidden" name="roomId" value="<%= room_id %>">
                    <input type="text" name="message" placeholder="Type a message..." required>
                    <button type="submit" class="button is-primary">Send</button>
                </form>
            <% } else { %>
                <p>Select a room to start chatting.</p>
            <% } %>
        </div>
    </div>
</div>

</body>
</html>
